{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "noUnusedLocals": false,
        "noImplicitReturns": false,
        "strict": false,
        "outDir": "../lib/scripts"
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}